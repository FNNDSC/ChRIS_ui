{
  "$schema": "https://biomejs.dev/schemas/1.1.2/schema.json",
  "files": {
    "include": [
      "src/**",
      "tests/**",
      "package.json",
      "biome.json",
      "*.config.ts",
      "vitest.*.ts",
      "tsconfig*.json",
      "testing/*.mjs"
    ],
    "ignore": ["package-lock.json", "pfdcm/generated"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  }
}
